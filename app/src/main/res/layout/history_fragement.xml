<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RadioButton
                android:checked="true"
                android:id="@+id/rbCompleted"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableRight="@android:drawable/btn_radio"
                android:drawablePadding="30dp"
                android:gravity="start|center_vertical"
                android:text="Completed Loads"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rbCreated"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@null"

                android:drawableRight="@android:drawable/btn_radio"
                android:drawablePadding="30dp"
                android:gravity="start|center_vertical"
                android:text="Created Loads"
                android:textSize="20dp" />


        </RadioGroup>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/history_null"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:text="No load created yet,tap + icon at the bottom of your screen"
                android:textColor="#A1A1A1"
                android:textSize="19sp"
                android:visibility="visible" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/radio">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</ScrollView>