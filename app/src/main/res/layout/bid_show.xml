<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_margin="10dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="5dp"
        app:cardMaxElevation="8dp">

        <RelativeLayout
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:elevation="10dp">

            <LinearLayout
                android:id="@+id/lll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/profile_show"
                        app:civ_border_color="@color/black"
                        app:civ_border_width="2dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/applogo"
                        android:padding="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transporter Name"
                        android:layout_toRightOf="@+id/profile_show"
                        android:layout_marginTop="20dp"
                        android:textSize="17sp"
                        android:id="@+id/transporter_name"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/transporter_name"
                        android:text="Address"
                        android:lines="3"
                        android:id="@+id/transporterAddress"
                        android:layout_toRightOf="@+id/profile_show" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp">

                    <TextView
                        android:id="@+id/dContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="50dp"
                        android:text="Rate : "
                        android:textColor="@color/black"/>
a
                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/dContact"
                        android:text="4549" />

                </RelativeLayout>
                <TextView
                    android:id="@+id/moreButton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/lll"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:background="@color/blue"
                    android:elevation="20dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text=" More Detail "
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>



